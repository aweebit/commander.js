{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "module": "node16",
    "esModuleInterop": true, /*
      should be the default with node16,
      but ts-jest overwrites it with false unless explicitly set
    */
    "lib": [
      "es2019"
    ],
    "types": [
      "node"
    ],
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false
  }
}
