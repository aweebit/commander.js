{
  "compilerOptions": {
    "module": "node16",
    "esModuleInterop": true, /*
      should be the default with node16,
      but ts-jest overwrites it with false unless explicitly set
    */
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "jest"
    ],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"
  ],
}
